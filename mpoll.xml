<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
	<name>com_mpoll</name>
	<creationDate>2009.01.09</creationDate>
	<author>DtD Productions</author>
	<authorEmail>mike@dtdpro.com</authorEmail>
	<authorUrl>http://www.ditzthedaisy.com</authorUrl>
	<copyright>(c)2008-2013</copyright>
	<license>GPL v2</license>
	<version>1.16.2</version>
    <releaseDate>2013.03.05</releaseDate>
    <releaseType>Update</releaseType>
	<description>COM_MPOLL_DESC</description>

	<files folder="site"> 
		<filename>index.html</filename>
		<filename>mpoll.php</filename>
		<filename>router.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>images</folder>>
	</files>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">sql/install.sql</file>
		</sql>
	</install>	
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates</schemapath>
		</schemas>
	</update>
	<media destination="com_mpoll" folder="media">
		<filename>index.html</filename>
		<filename>mpoll.css</filename>
		<folder>images</folder>
		<folder>upload</folder>
	</media>	
	<administration>
		<!-- Administration Menu Section -->
		<menu img="../media/com_mpoll/images/mpoll-16x16.png">COM_MPOLL_MENU</menu>

		
		<files folder="admin">
			<filename>index.html</filename>
			<filename>mpoll.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<folder>controllers</folder>
			<folder>elements</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>tables</folder>
			<folder>helpers</folder>
			<folder>sql</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_mpoll.ini</language>
			<language tag="en-GB">language/en-GB.com_mpoll.sys.ini</language>
		</languages>		
	</administration>


	
</extension>
