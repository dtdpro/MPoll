<?xml version="1.0" encoding="UTF-8"?>
<metadata>
	<layout title="Poll Page">
		<message>Poll Page</message>
	</layout>
	<fields name="request">
		<fieldset name="request" addfieldpath="/administrator/components/com_mpoll/models/fields">
			<field name="poll" type="modal_mpoll" label="Poll" description="" required="true" />
			<field name="task" type="radio" default="ballot" label="View" description="View">
				<option value="ballot">Ballot</option>
				<option value="results">Results</option>
			</field>
		</fieldset>
	</fields>
	<fields name="params">
		<fieldset name="basic">
			<field name="showlist" type="radio" default="after" label="Poll List" description="Show a drop down list of published polls and allow navigation to.">
				<option value="both">Results and Poll</option>
				<option value="after">Results Only</option>
				<option value="never">Do Not Display</option>
			</field>
			<field name="showstats" type="radio" default="1" label="Show Results Stats" description="# Voters, First and last vote time">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</field>
			<field name="rtmpl" type="text" default="" label="Results Template" description="temp=" />
			<field name="resultsas" type="radio" default="count" label="Results as" description="Show results in the ____ format.">
				<option value="count">Count</option>
				<option value="percent">Percentages</option>
			</field>
			
		</fieldset>
	</fields>
</metadata>