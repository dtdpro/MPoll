	<license>GPL v2</license>
	<version>1.29.8</version>
    <releaseDate>2023.02.01</releaseDate>
    <releaseType>Update</releaseType>
	<description>COM_MPOLL_DESC</description>
	<scriptfile>script.php</scriptfile>
	<files folder="site"> 
		<filename>index.html</filename>
		<filename>mpoll.php</filename>
		<filename>router.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>lib</folder>
		<folder>vendor</folder>
	</files>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">sql/install.sql</file>
		</sql>
	</install>	
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates</schemapath>
		</schemas>
	</update>
	<media destination="com_mpoll" folder="media">
		<filename>index.html</filename>
		<filename>mpoll.css</filename>
		<folder>images</folder>
		<folder>upload</folder>
		<folder>scripts</folder>
		<folder>uikit</folder>
	</media>	
	<languages folder="site">
		<language tag="en-GB">language/en-GB.com_mpoll.ini</language>
	</languages>
	<administration>
		<!-- Administration Menu Section -->
		<menu>COM_MPOLL_MENU</menu>
		<submenu>
			<menu view="mpolls">COM_MPOLL_SUBMENU_MPOLLS</menu>
			<menu link="option=com_categories&amp;extension=com_mpoll" view="categories" alt="MPoll/Categories">COM_MPOLL_SUBMENU_CATEGORIES</menu>
		</submenu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>mpoll.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<folder>controllers</folder>
			<folder>elements</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>tables</folder>
			<folder>helpers</folder>
			<folder>sql</folder>
			<folder>vendor</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_mpoll.ini</language>
			<language tag="en-GB">language/en-GB.com_mpoll.sys.ini</language>
		</languages>		
	</administration>
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" priority="1" name="DtD Productions - MPoll">http://update.ditzthedaisy.com/com_mpoll.xml</server>
	</updateservers>

	
</extension>
